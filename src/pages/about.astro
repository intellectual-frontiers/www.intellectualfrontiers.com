const metadata = {
  title: 'Healthcare Innovation | Patent For Sale - Intellectual Frontiers',
  description:
    'Discover groundbreaking healthcare solutions at Intellectual Frontiers. Our diverse patent portfolio revolutionizes patient care delivery. Get more details now.',
  ignoreTitleTemplate: true,
};

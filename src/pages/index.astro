import FAQs from '~/components/widgets/FAQs.astro';
// import Stats from '~/components/widgets/Stats.astro';
// import CallToAction from '~/components/widgets/CallToAction.astro';
import FeaturedpatentContent from '../../support/featuredpatent.json';
import FeaturedTopics from '../../support/featuredtopics.json';
import MostViewedPatent from '../../support/mostviewpatent.json';
import Faq from '../../support/faq.json';
import { Schema } from 'astro-seo-schema';

const metadata = {
  title: 'Patent License | Buy and Sell Patents Online - Intellectual Frontiers',
  description:
    'Explore the extensive patent portfolio at Intellectual Frontiers. Buy, sell, and license advanced tech patents online for industry-leading solutions across various sectors. Discover innovation today!',
  ignoreTitleTemplate: true,
};
---

<!-- Hide the breadcrumb in the homepage with  hideBreadcrumbs set to true-->
<Layout metadata={metadata} hideBreadcrumbs={true}>
  <!-- Hero Widget ******************* -->
  <Schema
    item={{
      '@context': 'https://schema.org',
      '@type': 'Organization',
      name: 'Intellectual Frontiers',
      alternateName: 'Intellectual Frontiers',
      url: 'https://www.intellectualfrontiers.com/',
      logo: 'https://www.intellectualfrontiers.com/images/IF-logo.svg',
      sameAs: 'https://twitter.com/i/flow/login?redirect_after_login=%2FIntelFrontiers',
    }}
  />
  <Schema
    item={{
      '@context': 'https://schema.org/',
      '@type': 'WebSite',
      name: 'Intellectual Frontiers',
      url: 'https://www.intellectualfrontiers.com',
      potentialAction: {
        '@type': 'SearchAction',
        target: 'https://www.intellectualfrontiers.com{search_term_string}',
        'query-input': 'required name=search_term_string',
      },
    }}
  />
  <Schema
    item={{
      '@context': 'https://schema.org',
      '@type': 'FAQPage',
      mainEntity: [
        {
          '@type': 'Question',
          name: 'What types of patents are included in Intellectual Frontiersâ€™ portfolio?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Our portfolio spans a diverse range of industries. It includes breakthrough patents in various high-growth areas, offering innovative solutions and cutting-edge technology applicable across multiple sectors.',
          },
        },
        {
          '@type': 'Question',
          name: 'What is the process for acquiring a patent from Intellectual Frontiers?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'To initiate the acquisition process, simply contact us through our website. Our team will guide you through the necessary steps, including discussions on licensing terms, pricing, and any other specific requirements you may have.',
          },
        },
        {
          '@type': 'Question',
          name: 'How can I explore the specific patents available for acquisition?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'You can easily browse our patent listings on our website. Each listing is accompanied by a detailed profile, including descriptions, potential applications, and visual aids, to help you understand the full potential of each patent.',
          },
        },
        {
          '@type': 'Question',
          name: 'Can IntellectualFrontiers.com assist in understanding how a specific patent can be integrated into my business?',
          acceptedAnswer: {
            '@type': 'Answer',
            text: 'Absolutely. Our expert team is available to discuss how our patents can be adapted to your business needs, offering insights into practical applications and integration strategies.',
          },
        },
      ],
    }}
  />
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Explore Our Patents for Sale',
        href: '/patents',
        icon: 'tabler:arrow-right',
      },
      {
        // variant: 'primary',
        text: 'Explore Defensive Disclosures',
        href: '/defensive-disclosures',
        icon: 'tabler:arrow-right',
      },
      // { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '', alt: '' }}
  >
    <Fragment slot="title">Patents for Sale: Explore, Acquire, and Secure Licensing for Breakthrough Patents</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Intellectual Frontiers presents a gateway to innovation through our extensive advanced tech patent portfolio,
        offering breakthrough solutions across various industries. Each patent is an opportunity for your business to
        leap forward, combining cutting-edge technology with strategic innovation. Discover, explore, and acquire the
        keys to your future success and industry leadership with our patent collection.</span
      >
    </Fragment>
  </Hero>

